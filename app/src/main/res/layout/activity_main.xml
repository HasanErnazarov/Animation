<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/iv_jpg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/kelajak" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_anim1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="loading.json" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_zoom"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                android:background="#3F51B5"
                android:text="ZOOM"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_rotate"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="#3F51B5"
                android:text="ROTATE"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_fade"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="#3F51B5"
                android:text="FADE"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_blink"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                android:background="#3F51B5"
                android:text="BLINK"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_move"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="#3F51B5"
                android:text="MOVE"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_slide"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:background="#3F51B5"
                android:text="SLIDE"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_prevanim"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:background="#F44336"
                android:text="Preview"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_play"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="#F44336"
                android:text="Play"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_pause"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="#F44336"
                android:text="Pausa"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bt_nextanim"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="#F44336"
                android:text="Next anim"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>